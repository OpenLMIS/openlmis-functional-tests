{
  "name": "openlmis-functional-tests",
  "version": "1.0.0",
  "description": "OpenLMIS Functional Tests - based on cucumber-boilerplate project",
  "homepage": "https://github.com/OpenLMIS/openlmis-functional-tests",
  "scripts": {
    "clean": "rm -Rf ./build",
    "local-webserver": "forever start -s ./node_modules/.bin/http-server ./demo-app -s",
    "test": "npm run test:validate && npm run test:features",
    "test:features": "npm run local-webserver & (wdio wdio.conf.js; wdio_ret=$?; forever stopall; exit $wdio_ret)",
    "test:validate": "eslint 'src/**/*.js' 'test/**/*.js!(setup.js)'",
    "performance-report": "node htmlify-csv convert build/performanceResults/StepPerformanceResults.csv --output=build/performanceResults/StepPerformanceResults.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenLMIS/openlmis-functional-tests"
  },
  "keywords": [
    "webdriverio",
    "cucumber",
    "test",
    "selenium",
    "openlmis"
  ],
  "license": "AGPL-3.0",
  "dependencies": {
    "babel-preset-es2015": "~6.24.0",
    "babel-register": "~6.26.0",
    "caporal": "^1.4.0",
    "chai": "~4.1.2",
    "glob": "~7.1.2",
    "papaparse": "^5.3.0",
    "record-screen": "^3.5.0",
    "request": "~2.81.0",
    "tablesorter": "^2.31.3",
    "wdio-cucumber-framework": "~1.0.2",
    "wdio-junit-reporter": "~0.3.1",
    "wdio-phantomjs-service": "~0.2.2",
    "wdio-selenium-standalone-service": "~0.0.10",
    "wdio-spec-reporter": "~0.1.3",
    "webdriverio": "4.14.0",
    "yarn": "^1.22.0"
  },
  "devDependencies": {
    "babel-core": "~6.0.0",
    "babel-jest": "~21.2.0",
    "babel-polyfill": "~6.26.0",
    "eslint": "~4.11.0",
    "eslint-config-airbnb-base": "~12.1.0",
    "eslint-plugin-import": "~2.8.0",
    "find-process": "1.1.0",
    "forever": "~0.15.3",
    "http-server": "~0.10.0",
    "wdio-devtools-service": "0.1.6"
  }
}
